{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "standard",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
          "no-tabs": ["error", { "allowIndentationTabs": true }],
          "indent": ["error", "tab"],
          "quotes": [
            "error",
            "single"
          ],
          "no-var": "error"
        }

}
