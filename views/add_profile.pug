extends layouts/main.pug

block stylesheet
  link(rel='stylesheet', href='../../static/styles/form.css', type='text/css')
block header
  h2 Create your profile
  
block content
  main.createProfile
    h3 Fill in your information
    form(action='/' method='POST')
      p
        label Firstname
          input(type='text' name='fName')
      p
        label Lastname
          input(type='text' name='lName')
      p
        label email
          input(type='text' name='email')
      p
        label language
          input(type='text' name='language')
      p
        label favourite show
          input(type='text' name='show')
      p
        label favourite activity
          input(type='text' name='activity')
      p
        button(name='create') Create your profile
      
  
